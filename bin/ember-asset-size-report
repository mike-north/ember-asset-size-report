#!/usr/bin/env node
// @ts-check
"use strict";

const pkgUp = require("pkg-up");
const fs = require("fs-extra");
const resolve = require("resolve");
const log = require("debug")("ember-asset-size-report");
const basedir = process.cwd();
const PKG_JSON_PATH = pkgUp.sync();

function isDev() {
  if (!PKG_JSON_PATH) return false;
  const pkgData = fs.readJSONSync(PKG_JSON_PATH);
  return pkgData.name === "ember-asset-size-report";
}

async function main() {
  let projectLocalCli;
  try {
    projectLocalCli = resolve.sync("ember-asset-size-report/dist/cli/index", {
      basedir: basedir
    });
  } catch (ignored) {}
  const cli = require(projectLocalCli || "../dist/cli/index");
  log("Running from: " + cli);
  await require(cli).main();
}
main();
